---
import MainLayout from '../../layouts/MainLayout.astro';
import HarIdxSearchWidget from '../../components/HarIdxSearchWidget.astro';
import HarIdxFeaturedListings from '../../components/HarIdxFeaturedListings.astro';
import HarIdxLeadCapture from '../../components/HarIdxLeadCapture.astro';

const translations = {
  es: {
    title: 'RealEstate Pro - Encuentra Tu Hogar Ideal',
    description: 'Servicios profesionales de bienes raíces en inglés y español. Encuentra tu hogar perfecto con nuestros agentes expertos.',
    hero: {
      title: 'Encuentra Tu Hogar Ideal',
      subtitle: 'Servicios profesionales de bienes raíces con atención personalizada',
      cta: 'Buscar Propiedades'
    },
    featured: {
      title: 'Propiedades Destacadas',
      subtitle: 'Descubre nuestros listados más populares'
    },
    contact: {
      title: '¿Listo para Comenzar?',
      subtitle: 'Contáctanos hoy para encontrar tu hogar perfecto'
    }
  }
};

const t = translations.es;
---

<MainLayout title={t.title} description={t.description} lang="es">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-primary-600 to-primary-700 text-white section">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="hero-title">
          {t.hero.title}
        </h1>
        <p class="hero-subtitle">
          {t.hero.subtitle}
        </p>
        <a href="#search" class="btn-inverted btn-lg">
          {t.hero.cta}
        </a>
      </div>
    </div>
  </section>

  <!-- Property Search Widget Section -->
  <section id="search" class="section bg-white">
    <div class="container-custom">
      <div class="section-header">
        <h2 class="section-title">
          Búsqueda de Propiedades
        </h2>
        <p class="section-subtitle">
          Encuentra propiedades con nuestras herramientas avanzadas de búsqueda
        </p>
      </div>
      
      <!-- HAR IDX Search Widget -->
      <HarIdxSearchWidget lang="es" />
    </div>
  </section>

  <!-- Featured Properties Section -->
  <section class="section bg-gray-50">
    <div class="container-custom">
      <div class="section-header">
        <h2 class="section-title">
          {t.featured.title}
        </h2>
        <p class="section-subtitle">
          {t.featured.subtitle}
        </p>
      </div>
      
      <!-- HAR IDX Featured Listings Widget -->
      <HarIdxFeaturedListings lang="es" count={6} />
    </div>
  </section>

  <!-- Lead Capture Section -->
  <section class="section bg-primary-50">
    <div class="container-custom">
      <div class="section-header">
        <h2 class="section-title">
          {t.contact.title}
        </h2>
        <p class="section-subtitle">
          {t.contact.subtitle}
        </p>
      </div>
      
      <div class="max-w-2xl mx-auto">
        <HarIdxLeadCapture lang="es" type="contact" />
      </div>
    </div>
  </section>
</MainLayout>