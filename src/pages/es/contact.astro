import HarIdxLeadCapture from '../../components/HarIdxLeadCapture.astro';

const translations = {
  es: {
    title: 'Cont√°ctanos - Mr. Sold Real Estate',
    description: 'Contacta a Enrique "MR. SOLD" Escobar - 17 a√±os de experiencia, $150M+ en ventas, especialista en casas de lujo sirviendo el √°rea de Houston.',
    hero: {
      title: 'Contacta Mr. Sold Real Estate',
      subtitle: 'Listos para ayudarte con tus necesidades inmobiliarias - Servicio Biling√ºe Disponible'
    },
    form: {
      title: 'Env√≠anos un mensaje',
      name: 'Nombre Completo',
      email: 'Correo Electr√≥nico',
      phone: 'N√∫mero de Tel√©fono',
      message: 'Mensaje',
      submit: 'Enviar Mensaje'
    },
    info: {
      title: 'Ponte en Contacto',
      mainPhone: '713-534-9674',
      directPhone: '(713) 903-7178',
      email: 'mrsoldtx@gmail.com',
      address1: '17110 Cypress Glade Dr, Cypress, TX 77429',
      address2: '17626 Belwood Park Ln, Cypress, TX 77433',
      license: 'Licencia TREC #9008299',
      broker: 'Corredor: Kari A King (573857)',
      languages: ['Ingl√©s', 'Espa√±ol', 'Ruso', 'Hindi'],
      hours: 'Disponible 7 d√≠as a la semana para consulta'
    }
  }
};

const t = translations.es;
---

<MainLayout title={t.title} description={t.description} lang="es">
  <!-- Hero Section -->
  <section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img 
        src={`${import.meta.env.BASE_URL}assets/images/hero-contact.jpg`}
        alt="Oficina inmobiliaria moderna de Houston con vistas al horizonte de la ciudad - Espacio de consulta profesional de Mr. Sold Real Estate"
        class="w-full h-full object-cover"
        loading="eager"
        fetchpriority="high"
      />
      <!-- Gradient Overlay -->
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
    
    <!-- Hero Content -->
    <div class="relative z-10 container-custom px-4 py-8">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Hero Card -->
        <div class="bg-white/10 backdrop-blur-md rounded-2xl p-6 sm:p-8 md:p-12 shadow-2xl border border-white/20">
          <h1 class="hero-title text-white leading-tight">
            {t.hero.title}
          </h1>
          <p class="hero-subtitle leading-relaxed">
            {t.hero.subtitle}
          </p>
          <div class="flex flex-col gap-4 justify-center items-center w-full">
            <a href="tel:713-903-7178" class="btn-primary btn-lg w-full sm:w-auto px-8 py-4 text-lg font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
              üìû Llamar: (713) 903-7178
            </a>
            <a href="#contact-form" class="btn-inverted btn-lg w-full sm:w-auto px-8 py-4 text-lg font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
              ‚úâÔ∏è Enviar Mensaje
            </a>
          </div>
        </div>
        
        <!-- Scroll Indicator -->
        <div class="mt-16 animate-bounce">
          <svg class="w-6 h-6 mx-auto text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form and Info -->
  <section id="contact-form" class="py-8 sm:py-16 bg-white scroll-mt-24">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 space-y-8 lg:space-y-0">
        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-bold text-secondary-900 mb-8">
            {t.form.title}
          </h2>
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-secondary-700 mb-2">
                {t.form.name}
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-secondary-700 mb-2">
                {t.form.email}
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                required
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-secondary-700 mb-2">
                {t.form.phone}
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-secondary-700 mb-2">
                {t.form.message}
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="5"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                required
              ></textarea>
            </div>
            <button type="submit" class="btn-primary w-full">
              {t.form.submit}
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div>
          <h2 class="text-3xl font-bold text-secondary-900 mb-8">
            {t.info.title}
          </h2>
          <div class="space-y-6">
            <!-- Oficina Principal -->
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-primary-600 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <div>
                <p class="font-semibold text-secondary-800">Oficina Principal</p>
                <a href="tel:713-534-9674" class="text-primary-600 hover:text-primary-700">{t.info.mainPhone}</a>
              </div>
            </div>
            <!-- Agente Directo -->
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-primary-600 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
              <div>
                <p class="font-semibold text-secondary-800">Agente Directo</p>
                <a href="tel:713-903-7178" class="text-primary-600 hover:text-primary-700">{t.info.directPhone}</a>
              </div>
            </div>
            <!-- Email -->
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-primary-600 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <div>
                <p class="font-semibold text-secondary-800">Correo Electr√≥nico</p>
                <a href="mailto:mrsoldtx@gmail.com" class="text-primary-600 hover:text-primary-700">{t.info.email}</a>
              </div>
            </div>
            <!-- Direcciones de Oficina -->
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-primary-600 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div>
                <p class="font-semibold text-secondary-800">Ubicaciones de Oficina</p>
                <p class="text-secondary-700">{t.info.address1}</p>
                <p class="text-secondary-700">{t.info.address2}</p>
              </div>
            </div>
            <!-- Idiomas -->
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-primary-600 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <p class="font-semibold text-secondary-800">Idiomas</p>
                <div class="flex flex-wrap gap-2 mt-1">
                  {t.info.languages.map((lang) => (
                    <span class="px-2 py-1 bg-primary text-white rounded text-sm">{lang}</span>
                  ))}
                </div>
              </div>
            </div>
            <!-- Informaci√≥n de Licencia -->
            <div class="bg-gray-50 p-4 rounded-lg">
              <p class="text-sm font-semibold text-secondary-800">{t.info.license}</p>
              <p class="text-sm text-secondary-600">{t.info.broker}</p>
            </div>
            <!-- Horarios -->
            <div class="flex items-start space-x-3">
              <svg class="w-6 h-6 text-primary-600 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <p class="font-semibold text-secondary-800">Disponibilidad</p>
                <p class="text-secondary-700">{t.info.hours}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- HAR IDX Lead Capture Widget Section -->
  <section class="py-16 bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-secondary-900 mb-4">
          Formulario de Inter√©s en Propiedades
        </h2>
        <p class="text-lg text-secondary-600">
          Cu√©ntanos qu√© tipo de propiedad est√°s buscando
        </p>
      </div>
      
      <!-- HAR IDX Property Interest Widget -->
      <div class="max-w-3xl mx-auto">
        <HarIdxLeadCapture lang="es" type="property-interest" />
      </div>
    </div>
  </section>
</MainLayout>