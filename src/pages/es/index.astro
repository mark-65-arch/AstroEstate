---
import MainLayout from '../../layouts/MainLayout.astro';
import HarIdxSearchWidget from '../../components/HarIdxSearchWidget.astro';
import HarIdxFeaturedListings from '../../components/HarIdxFeaturedListings.astro';
import TrustSocialProof from '../../components/TrustSocialProof.astro';
import HarIdxLeadCapture from '../../components/HarIdxLeadCapture.astro';
import AgentBio from '../../components/AgentBio.astro';
import FAQ from '../../components/FAQ.astro';

const translations = {
  es: {
    title: 'V√©ndelo con Mr. Sold Real Estate - Houston TX',
    description: 'Servicios biling√ºes de bienes ra√≠ces en Ingl√©s y Espa√±ol. 17+ a√±os de experiencia, $150M+ en ventas. Especialista en Casas de Lujo sirviendo el √°rea de Houston.',
    hero: {
      title: 'V√©ndelo con Mr. Sold Real Estate',
      subtitle: 'Servicio Biling√ºe en Ingl√©s y Espa√±ol',
      cta: 'Buscar Propiedades'
    },
    featured: {
      title: 'Propiedades Destacadas',
      subtitle: 'Descubre nuestros listados m√°s populares'
    },
    contact: {
      title: '¬øListo para Comenzar?',
      subtitle: 'Cont√°ctanos hoy para encontrar tu hogar perfecto'
    }
  }
};

const t = translations.es;
---

<MainLayout title={t.title} description={t.description} lang="es">
  <!-- Hero Section -->
  <section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <picture>
        <source 
          media="(min-width: 1280px)" 
          srcset={`${import.meta.env.BASE_URL}assets/images/hero-house-large.webp`}
          type="image/webp"
        />
        <source 
          media="(min-width: 768px)" 
          srcset={`${import.meta.env.BASE_URL}assets/images/hero-house-medium.webp`}
          type="image/webp"
        />
        <source 
          srcset={`${import.meta.env.BASE_URL}assets/images/hero-house-small.webp`}
          type="image/webp"
        />
        <img 
          src={`${import.meta.env.BASE_URL}assets/images/hero-house-original.jpg`}
          alt="Hermosa casa moderna en el √°rea de Houston con acento de piedra, puerta de garaje blanca y paisajismo profesional - Mr. Sold Real Estate especialista en propiedades de lujo"
          class="w-full h-full object-cover"
          loading="eager"
          fetchpriority="high"
        />
      </picture>
      <!-- Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-r from-navy-900/80 via-navy-800/70 to-navy-900/80"></div>
    </div>
    
    <!-- Hero Content -->
    <div class="relative z-10 container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Hero Card -->
        <div class="bg-white/10 backdrop-blur-md rounded-2xl p-8 md:p-12 shadow-2xl border border-white/20">
          <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 leading-tight">
            {t.hero.title}
          </h1>
          <p class="text-xl md:text-2xl text-white/90 mb-8 leading-relaxed font-serif">
            {t.hero.subtitle}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a href="#search" class="btn-primary btn-lg px-8 py-4 text-lg font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
              üè† {t.hero.cta}
            </a>
            <a href="#featured" class="btn-inverted btn-lg px-8 py-4 text-lg font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
              üìã Ver Listados
            </a>
          </div>
        </div>
        
        <!-- Scroll Indicator -->
        <div class="mt-16 animate-bounce">
          <svg class="w-6 h-6 mx-auto text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Agent Bio Section -->
  <AgentBio lang="es" />

  <!-- Property Search Widget Section -->
  <section id="search" class="section bg-white scroll-mt-24">
    <div class="container-custom">
      <div class="section-header">
        <h2 class="section-title">
          B√∫squeda de Propiedades
        </h2>
        <p class="section-subtitle">
          Encuentra propiedades con nuestras herramientas avanzadas de b√∫squeda
        </p>
      </div>
      
      <!-- HAR IDX Search Widget -->
      <HarIdxSearchWidget lang="es" />
    </div>
  </section>

  <!-- Featured Properties Section -->
  <section id="featured" class="section bg-gray-50 scroll-mt-24">
    <div class="container-custom">
      <div class="section-header">
        <h2 class="section-title">
          {t.featured.title}
        </h2>
        <p class="section-subtitle">
          {t.featured.subtitle}
        </p>
      </div>
      
      <!-- HAR IDX Featured Listings Widget -->
      <HarIdxFeaturedListings lang="es" count={6} />
    </div>
  </section>

  <!-- Trust & Social Proof Section -->
  <TrustSocialProof lang="es" />

  <!-- FAQ Section -->
  <FAQ lang="es" />

  <!-- Lead Capture Section -->
  <section id="lead-capture" class="section bg-primary-50">
    <div class="container-custom">
      <div class="section-header">
        <h2 class="section-title">
          {t.contact.title}
        </h2>
        <p class="section-subtitle">
          {t.contact.subtitle}
        </p>
      </div>
      
      <div class="max-w-2xl mx-auto">
        <HarIdxLeadCapture lang="es" type="contact" />
      </div>
    </div>
  </section>
</MainLayout>