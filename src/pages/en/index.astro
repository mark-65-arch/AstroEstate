---
import MainLayout from '../../layouts/MainLayout.astro';
import HarIdxSearchWidget from '../../components/HarIdxSearchWidget.astro';
import HarIdxFeaturedListings from '../../components/HarIdxFeaturedListings.astro';
import HarIdxLeadCapture from '../../components/HarIdxLeadCapture.astro';

const translations = {
  en: {
    title: 'RealEstate Pro - Find Your Dream Home',
    description: 'Professional real estate services in English and Spanish. Find your perfect home with our expert agents.',
    hero: {
      title: 'Find Your Dream Home',
      subtitle: 'Professional real estate services with personalized attention',
      cta: 'Search Properties'
    },
    featured: {
      title: 'Featured Properties',
      subtitle: 'Discover our most popular listings'
    },
    contact: {
      title: 'Ready to Get Started?',
      subtitle: 'Contact us today to find your perfect home'
    }
  }
};

const t = translations.en;
---

<MainLayout title={t.title} description={t.description} lang="en">
  <!-- Hero Section -->
  <section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.unsplash.com/photo-1449824913935-59a10b8d2000?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" 
        alt="Beautiful Houston neighborhood with modern homes"
        class="w-full h-full object-cover"
      />
      <!-- Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-r from-navy-900/80 via-navy-800/70 to-navy-900/80"></div>
    </div>
    
    <!-- Hero Content -->
    <div class="relative z-10 container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Hero Card -->
        <div class="bg-white/10 backdrop-blur-md rounded-2xl p-8 md:p-12 shadow-2xl border border-white/20">
          <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 leading-tight">
            {t.hero.title}
          </h1>
          <p class="text-xl md:text-2xl text-white/90 mb-8 leading-relaxed font-serif">
            {t.hero.subtitle}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a href="#search" class="btn-primary btn-lg px-8 py-4 text-lg font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
              üè† {t.hero.cta}
            </a>
            <a href="#featured" class="btn-inverted btn-lg px-8 py-4 text-lg font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
              üìã View Listings
            </a>
          </div>
        </div>
        
        <!-- Scroll Indicator -->
        <div class="mt-16 animate-bounce">
          <svg class="w-6 h-6 mx-auto text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Property Search Widget Section -->
  <section id="search" class="section bg-white scroll-mt-24">
    <div class="container-custom">
      <div class="section-header">
        <h2 class="section-title">
          Property Search
        </h2>
        <p class="section-subtitle">
          Find properties with our advanced search tools
        </p>
      </div>
      
      <!-- HAR IDX Search Widget -->
      <HarIdxSearchWidget lang="en" />
    </div>
  </section>

  <!-- Featured Properties Section -->
  <section id="featured" class="section bg-gray-50 scroll-mt-24">
    <div class="container-custom">
      <div class="section-header">
        <h2 class="section-title">
          {t.featured.title}
        </h2>
        <p class="section-subtitle">
          {t.featured.subtitle}
        </p>
      </div>
      
      <!-- HAR IDX Featured Listings Widget -->
      <HarIdxFeaturedListings lang="en" count={6} />
    </div>
  </section>

  <!-- Lead Capture Section -->
  <section class="section bg-primary-50">
    <div class="container-custom">
      <div class="section-header">
        <h2 class="section-title">
          {t.contact.title}
        </h2>
        <p class="section-subtitle">
          {t.contact.subtitle}
        </p>
      </div>
      
      <div class="max-w-2xl mx-auto">
        <HarIdxLeadCapture lang="en" type="contact" />
      </div>
    </div>
  </section>
</MainLayout>