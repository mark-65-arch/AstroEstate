---
export interface Props {
  title: string;
  description: string;
  lang: 'en' | 'es';
  canonical?: string;
  ogImage?: string;
  schema?: any;
}

const { title, description, lang, canonical, ogImage, schema } = Astro.props;

const siteName = 'Mr. Sold Real Estate';
const defaultOgImage = '/og-image.jpg';
const currentURL = Astro.url.href;
const baseURL = Astro.site ? Astro.site.origin : Astro.url.origin;

// Build proper canonical and hreflang alternates
const canonicalURL = canonical || `${baseURL}${Astro.url.pathname}`;
const pathWithoutLang = Astro.url.pathname.replace(/^\/(en|es)/, '');
const enURL = `${baseURL}/en${pathWithoutLang}`;
const esURL = `${baseURL}/es${pathWithoutLang}`;

// Local Business Schema Object
const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "RealEstateAgent",
  "name": "Mr. Sold Real Estate L.L.C.",
  "alternateName": "Enrique Escobar - MR. SOLD",
  "description": "Houston bilingual real estate agent with 17+ years experience and $150M+ in sales. Luxury home specialist serving Houston, Cypress, and surrounding areas with English, Spanish, Russian, and Hindi support.",
  "url": baseURL,
  "telephone": "+1-713-903-7178",
  "email": "mrsoldtx@gmail.com",
  "address": [
    {
      "@type": "PostalAddress",
      "streetAddress": "17110 Cypress Glade Dr",
      "addressLocality": "Cypress",
      "addressRegion": "TX",
      "postalCode": "77429",
      "addressCountry": "US"
    },
    {
      "@type": "PostalAddress",
      "streetAddress": "17626 Belwood Park Ln",
      "addressLocality": "Cypress",
      "addressRegion": "TX",
      "postalCode": "77433",
      "addressCountry": "US"
    }
  ],
  "serviceArea": {
    "@type": "GeoCircle",
    "geoMidpoint": {
      "@type": "GeoCoordinates",
      "latitude": "29.7604",
      "longitude": "-95.3698"
    },
    "geoRadius": "80000"
  },
  "areaServed": ["Houston", "Cypress", "Harris County", "Montgomery County", "Fort Bend County", "Texas"],
  "knowsLanguage": ["English", "Spanish", "Russian", "Hindi"],
  "hasCredential": {
    "@type": "EducationalOccupationalCredential",
    "credentialCategory": "Real Estate License",
    "recognizedBy": "Texas Real Estate Commission (TREC)",
    "identifier": "9008299"
  },
  "memberOf": {
    "@type": "Organization",
    "name": "Houston Association of Realtors (HAR)"
  },
  "broker": {
    "@type": "RealEstateAgent",
    "name": "Kari A King",
    "identifier": "573857"
  },
  "priceRange": "$$-$$$$",
  "slogan": "Get It Sold with Mr. Sold Real Estate - Bilingual Service in English & Español"
};
---

<!-- Basic Meta Tags -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={description} />
<meta name="keywords" content={lang === 'en' ? 'real estate, homes for sale, property search, Houston real estate, buy home, sell home' : 'bienes raíces, casas en venta, búsqueda de propiedades, bienes raíces Houston, comprar casa, vender casa'} />
<meta name="author" content={siteName} />
<meta name="robots" content="index, follow" />

<!-- Language and Locale -->
<meta name="language" content={lang} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph Meta Tags -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content="website" />
<meta property="og:url" content={currentURL} />
<meta property="og:image" content={ogImage || defaultOgImage} />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content={lang === 'en' ? 'en_US' : 'es_ES'} />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage || defaultOgImage} />

<!-- Alternate Language Links -->
<link rel="alternate" hreflang="en" href={enURL} />
<link rel="alternate" hreflang="es" href={esURL} />
<link rel="alternate" hreflang="x-default" href={enURL} />

<!-- Structured Data (JSON-LD) -->
{schema && (
  <script type="application/ld+json" set:html={JSON.stringify(schema)} is:inline />
)}

<!-- Local Business Schema -->
<script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} is:inline />