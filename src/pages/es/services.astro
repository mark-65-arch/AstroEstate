---
import MainLayout from '../../layouts/MainLayout.astro';
import HarIdxLeadCapture from '../../components/HarIdxLeadCapture.astro';

const translations = {
  es: {
    title: 'Nuestros Servicios - Mr. Sold Real Estate',
    description: 'Servicios expertos de bienes raíces con 17 años de experiencia y $150M+ en ventas. Especializándonos en casas de lujo con soporte bilingüe.',
    hero: {
      title: 'Nuestros Servicios',
      subtitle: 'Soluciones profesionales de bienes raíces con Mr. Sold Real Estate'
    },
    services: [
      {
        title: 'Compra de Vivienda',
        description: 'Asesoramiento experto en cada paso del proceso de compra con 17 años de conocimiento del mercado local',
        features: ['Análisis de Mercado y Precios', 'Búsqueda de Casas de Lujo', 'Soporte Bilingüe (EN/ES/RU/HI)', 'Negociación Experta', 'Coordinación de Cierre']
      },
      {
        title: 'Venta de Vivienda',
        description: 'Maximiza el valor de tu propiedad con estrategias probadas que generaron $150M+ en ventas',
        features: ['Valuación Profesional', 'Plan de Marketing Estratégico', 'Staging de Casas de Lujo', 'Gestión HAR/MLS', 'Supervisión de Transacciones']
      },
      {
        title: 'Solicitud de CMA (Análisis Comparativo del Mercado)',
        description: 'Obtén un análisis integral del mercado para determinar el valor actual de tu casa',
        features: ['Análisis Detallado de Propiedad', 'Comparación de Ventas Recientes', 'Reporte de Tendencias del Mercado', 'Estrategia de Precios', 'Consulta Gratuita']
      },
      {
        title: 'Especialista en Casas de Lujo',
        description: 'Experiencia especializada en propiedades de alta gama en toda el área de Houston',
        features: ['Experiencia en Mercado de Lujo', 'Red de Propiedades de Alta Gama', 'Marketing Discreto', 'Experiencia de Servicio Premium', 'Propiedades Grado Inversión']
      }
    ],
    cta: {
      title: '¿Listo para Comenzar?',
      subtitle: 'Contacta a Enrique "MR. SOLD" Escobar hoy',
      phone: '(713) 903-7178',
      email: 'mrsoldtx@gmail.com'
    }
  }
};

const t = translations.es;
---

<MainLayout title={t.title} description={t.description} lang="es">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-primary-600 to-primary-700 text-white py-20">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          {t.hero.title}
        </h1>
        <p class="text-xl md:text-2xl text-primary-100">
          {t.hero.subtitle}
        </p>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-16 bg-white">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 gap-8">
        {t.services.map((service) => (
          <div class="bg-gray-50 rounded-lg p-8 hover:shadow-lg transition-shadow">
            <h3 class="text-2xl font-bold text-secondary-900 mb-4">
              {service.title}
            </h3>
            <p class="text-secondary-600 mb-6">
              {service.description}
            </p>
            <ul class="space-y-2">
              {service.features.map((feature) => (
                <li class="flex items-center text-secondary-700">
                  <svg class="w-5 h-5 text-primary-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 bg-primary-light">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          {t.cta.title}
        </h2>
        <p class="text-lg mb-8">
          {t.cta.subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
          <a href="tel:713-903-7178" class="btn-primary btn-lg px-8 py-4 text-lg font-semibold">
            📞 Llamar Directo: {t.cta.phone}
          </a>
          <a href="mailto:mrsoldtx@gmail.com" class="btn-secondary btn-lg px-8 py-4 text-lg font-semibold">
            ✉️ Email: {t.cta.email}
          </a>
        </div>
      </div>
      
      <!-- HAR IDX Lead Capture Widget -->
      <div class="max-w-2xl mx-auto">
        <HarIdxLeadCapture lang="es" type="contact" />
      </div>
    </div>
  </section>
</MainLayout>