---
import MainLayout from '../../layouts/MainLayout.astro';
import HarIdxLeadCapture from '../../components/HarIdxLeadCapture.astro';

const translations = {
  en: {
    title: 'Our Services - Mr. Sold Real Estate',
    description: 'Expert real estate services with 17 years experience and $150M+ in sales. Specializing in luxury homes with bilingual support.',
    hero: {
      title: 'Our Services',
      subtitle: 'Professional real estate solutions with Mr. Sold Real Estate'
    },
    services: [
      {
        title: 'Home Buying',
        description: 'Expert guidance through every step of the home buying process with 17 years of local market knowledge',
        features: ['Market Analysis & Pricing', 'Luxury Home Search', 'Bilingual Support (EN/ES/RU/HI)', 'Expert Negotiation', 'Closing Coordination']
      },
      {
        title: 'Home Selling',
        description: 'Maximize your property value with proven strategies that generated $150M+ in sales',
        features: ['Professional Property Valuation', 'Strategic Marketing Plan', 'Luxury Home Staging', 'HAR/MLS Listing Management', 'Transaction Oversight']
      },
      {
        title: 'CMA Request (Comparative Market Analysis)',
        description: 'Get a comprehensive market analysis to determine your home\'s current market value',
        features: ['Detailed Property Analysis', 'Recent Sales Comparison', 'Market Trends Report', 'Pricing Strategy', 'Free Consultation']
      },
      {
        title: 'Luxury Home Specialist',
        description: 'Specialized expertise in high-end properties throughout the Houston area',
        features: ['Luxury Market Expertise', 'High-End Property Network', 'Discrete Marketing', 'Premium Service Experience', 'Investment Grade Properties']
      }
    ],
    cta: {
      title: 'Ready to Get Started?',
      subtitle: 'Contact Enrique "MR. SOLD" Escobar today',
      phone: '(713) 903-7178',
      email: 'mrsoldtx@gmail.com'
    }
  }
};

const t = translations.en;
---

<MainLayout title={t.title} description={t.description} lang="en">
  <!-- Hero Section -->
  <section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img 
        src={`${import.meta.env.BASE_URL}assets/images/hero-services.jpg`}
        alt="Professional real estate agent consulting with clients in modern Houston office - Mr. Sold Real Estate expert services"
        class="w-full h-full object-cover"
        loading="eager"
        fetchpriority="high"
      />
      <!-- Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-r from-navy-900/80 via-navy-800/70 to-navy-900/80"></div>
    </div>
    
    <!-- Hero Content -->
    <div class="relative z-10 container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Hero Card -->
        <div class="bg-white/10 backdrop-blur-md rounded-2xl p-8 md:p-12 shadow-2xl border border-white/20">
          <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 leading-tight">
            {t.hero.title}
          </h1>
          <p class="text-xl md:text-2xl text-white/90 mb-8 leading-relaxed font-serif">
            {t.hero.subtitle}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a href="#services" class="btn-primary btn-lg px-8 py-4 text-lg font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
              üèòÔ∏è View Our Services
            </a>
            <a href="#contact" class="btn-inverted btn-lg px-8 py-4 text-lg font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
              üìû Contact Us
            </a>
          </div>
        </div>
        
        <!-- Scroll Indicator -->
        <div class="mt-16 animate-bounce">
          <svg class="w-6 h-6 mx-auto text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section id="services" class="py-16 bg-white scroll-mt-24">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 gap-8">
        {t.services.map((service) => (
          <div class="bg-gray-50 rounded-lg p-8 hover:shadow-lg transition-shadow">
            <h3 class="text-2xl font-bold text-secondary-900 mb-4">
              {service.title}
            </h3>
            <p class="text-secondary-600 mb-6">
              {service.description}
            </p>
            <ul class="space-y-2">
              {service.features.map((feature) => (
                <li class="flex items-center text-secondary-700">
                  <svg class="w-5 h-5 text-primary-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 bg-primary-light">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          {t.cta.title}
        </h2>
        <p class="text-lg mb-8">
          {t.cta.subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
          <a href="tel:713-903-7178" class="btn-primary btn-lg px-8 py-4 text-lg font-semibold">
            üìû Call Direct: {t.cta.phone}
          </a>
          <a href="mailto:mrsoldtx@gmail.com" class="btn-secondary btn-lg px-8 py-4 text-lg font-semibold">
            ‚úâÔ∏è Email: {t.cta.email}
          </a>
        </div>
      </div>
      
      <!-- HAR IDX Lead Capture Widget -->
      <div class="max-w-2xl mx-auto">
        <HarIdxLeadCapture lang="en" type="contact" />
      </div>
    </div>
  </section>
</MainLayout>