---
import MainLayout from '../../layouts/MainLayout.astro';
import HarIdxLeadCapture from '../../components/HarIdxLeadCapture.astro';

const translations = {
  es: {
    title: 'Contáctanos - RealEstate Pro',
    description: 'Ponte en contacto con nuestro equipo profesional de bienes raíces. Estamos aquí para ayudarte con todas tus necesidades inmobiliarias.',
    hero: {
      title: 'Contáctanos',
      subtitle: 'Listos para ayudarte con tus necesidades inmobiliarias'
    },
    form: {
      title: 'Envíanos un mensaje',
      name: 'Nombre Completo',
      email: 'Correo Electrónico',
      phone: 'Número de Teléfono',
      message: 'Mensaje',
      submit: 'Enviar Mensaje'
    },
    info: {
      title: 'Ponte en Contacto',
      phone: '+1 (555) 123-4567',
      email: 'info@realestatepro.com',
      address: '123 Main Street, Houston, TX 77001',
      hours: 'Lun-Vie: 9AM-6PM, Sáb: 10AM-4PM'
    }
  }
};

const t = translations.es;
---

<MainLayout title={t.title} description={t.description} lang="es">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-primary-600 to-primary-700 text-white py-20">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          {t.hero.title}
        </h1>
        <p class="text-xl md:text-2xl text-primary-100">
          {t.hero.subtitle}
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form and Info -->
  <section class="py-16 bg-white">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-bold text-secondary-900 mb-8">
            {t.form.title}
          </h2>
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-secondary-700 mb-2">
                {t.form.name}
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-secondary-700 mb-2">
                {t.form.email}
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                required
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-secondary-700 mb-2">
                {t.form.phone}
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-secondary-700 mb-2">
                {t.form.message}
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="5"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                required
              ></textarea>
            </div>
            <button type="submit" class="btn-primary w-full">
              {t.form.submit}
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div>
          <h2 class="text-3xl font-bold text-secondary-900 mb-8">
            {t.info.title}
          </h2>
          <div class="space-y-6">
            <div class="flex items-center">
              <svg class="w-6 h-6 text-primary-600 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <span class="text-secondary-700">{t.info.phone}</span>
            </div>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-primary-600 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span class="text-secondary-700">{t.info.email}</span>
            </div>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-primary-600 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span class="text-secondary-700">{t.info.address}</span>
            </div>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-primary-600 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-secondary-700">{t.info.hours}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- HAR IDX Lead Capture Widget Section -->
  <section class="py-16 bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-secondary-900 mb-4">
          Formulario de Interés en Propiedades
        </h2>
        <p class="text-lg text-secondary-600">
          Cuéntanos qué tipo de propiedad estás buscando
        </p>
      </div>
      
      <!-- HAR IDX Property Interest Widget -->
      <div class="max-w-3xl mx-auto">
        <HarIdxLeadCapture lang="es" type="property-interest" />
      </div>
    </div>
  </section>
</MainLayout>