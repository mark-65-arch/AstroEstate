          id="testimonialSlider" 
          class="overflow-x-auto scrollbar-hide flex gap-8 scroll-smooth"
          style="scroll-snap-type: x mandatory;"
          role="region"
          aria-roledescription="carousel"
          aria-label="Client testimonials"
